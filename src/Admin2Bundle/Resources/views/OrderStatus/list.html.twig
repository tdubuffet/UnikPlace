{% extends 'Admin2Bundle::layout.html.twig' %}

{% block page_title %}Statut de commande{% endblock %}
{% block page_subtitle %}Statut de commande{% endblock %}


{% block page_content %}

  <div class="box">
    {% for type, messages in app.session.flashbag.all() %}
      {% for message in messages %}
        <div class="alert alert-{{ type }}">
          {{ message }}
        </div>
      {% endfor %}
    {% endfor %}
    <!-- /.box-header -->
    <div class="box-body">
      <table class="table table-bordered">
        <tbody>
        <tr>
          <th>Nom</th>
          <th>Actions</th>
        </tr>

        {% for key, status in statusList %}

          <tr>
            <td>{{ status.name }}</td>
            <td>
              <a href="{{ path('ad2_order_status_edit', {'id': status.id}) }}" class="btn btn-primary">
                <i class="fa fa-pencil"></i>
              </a>
              {% if count[key] <= 0 %}
              <button class="btn btn-danger" data-id="{{ status.id }}" data-type="order_status">
                <i class="fa fa-trash"></i>
              </button>
              {% endif %}
            </td>
          </tr>
        {% endfor %}

        </tbody>
      </table>
    </div>
    <div class="box-footer">
      <a href="{{ path('ad2_order_status_new') }}" class="btn btn-info">
        <i class="fa fa-plus"></i> Ajouter un statut de commande
      </a>
    </div>
  </div>

{% endblock %}

  {% block javascripts_inline %}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script src="{{ asset('components/bootbox.js/bootbox.js') }}"></script>
    <script src="{{ asset('bundles/admin2/js/list.js') }}"></script>
  {% endblock %}