{% extends 'AppBundle::base.html.twig' %}

{% block body %}

{% set breadcrumb = category.getBreadcrumb() %}
<ol class="breadcrumb">
<li><span itemscope itemtype="http://data-vocabulary.org/Breadcrumb"><a href="{{ path('homepage') }}" itemprop="url"><span itemprop="title">Accueil</span></a></span></li>
{% for element in breadcrumb %}
<li><span itemscope itemtype="http://data-vocabulary.org/Breadcrumb"><a href="{{ path('category', {path: element.getPath()}) }}" itemprop="url"><span itemprop="title">{{ element.name }}</span></a></span></li>
{% endfor %}
</ol>


<h1>{{ category.name }}</h1>

{% for product in products %}
<div class="col-sm-3">
  <a href="{{ path('product_details', {id: product.getId(), slug: product.getSlug()}) }}" role="button">
    {% set images = product.getImages() %}
    <img class="img-responsive" src="{% if images[0] is defined %}{{ vich_uploader_asset(images[0], 'imageFile') }}{% else %}{% endif %}" alt="{{ product.name }}" />
    <div class="text-center">{{ product.name }}</div>
  </a>
</div>
{% endfor %}


{% endblock %}
