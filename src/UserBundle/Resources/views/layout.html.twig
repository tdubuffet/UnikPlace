{% extends 'AppBundle::base.html.twig' %}

{% block body %}
<div class="main-wrapper">
  <div class="container">
    <div class="main">

      {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
          <div class="{{ type }}">
            {{ message|trans({}, 'FOSUserBundle') }}
          </div>
        {% endfor %}
      {% endfor %}

      {% block fos_user_content %}
      {% endblock fos_user_content %}

    </div><!-- .main -->
  </div><!-- .container -->
</div><!-- .main-wrapper -->
{% endblock %}
