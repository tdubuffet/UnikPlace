<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>{% block title %}{% endblock %} | {{ siteName }}, le premium à votre portée</title>
    <meta name="description" content="{% block description %}Des produits premium à votre portée sur {{ siteName }}{% endblock %}">

    <!-- Bootstrap -->
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/master.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body {% block bodyclass %}{% endblock %}>


    <!-- // HEADER // -->
    <header class="header-wrapper">
      <div class="header-container">
        <div class="main-header">
          <div class="container">
            <div class="header-content mobile-wrapper visible-xs">
              <div id="mobile-sticky" class="mobile-content-inner">
                <div class="header-top-left">
                  <div class="top-left-inner">
                    <div class="header-search">
                      <div class="search-container">
                        <div class="overwrite-setting skip-link" onclick="Common.mobileSkipLink(this);" data-target-element="#navbar-search">
                          <i class="fa fa-search"></i>
                        </div>
                        <div id="navbar-search" class="switcher-content skip-content">
                          <form id="search_mb_mini_form" action="{{ path('search') }}" method="get">
                            <div class="input-group form-search">
                              <div class="input-group-btn category-filter">
                                <button type="button" class="btn dropdown-toggle" data-toggle="dropdown">
                                  <span class="category-label">Tout </span>&nbsp;
                                  <i class="fa fa-angle-down"></i>
                                </button>
                                {{ render(controller('AppBundle:Default:searchcategories')) }}
                              </div>
                              <input type="hidden" name="cat" class="search-category" value="{{ app.request.query.get('cat') }}" />
                              <input id="mb_search"
                                     type="search"
                                     name="q"
                                     value="{{ app.request.query.get('q') }}"
                                     class="input-text required-entry"
                                     maxlength="128"
                                     placeholder="Rechercher sur le site..."
                                     />
                              <button type="submit" title="Search" class="search-button"><span><span><i class="fa fa-search"></i></span></span></button>
                            </div>
                            <div id="search_mb_autocomplete" class="search-autocomplete" style="display: none"></div>
                          </form>
                        </div>
                      </div>
                    </div>
                    <!-- navigation BOF -->
                    <div class="navbar visible-xs">
                      <div class="navbar">
                        <div class="navbar-header skip-link" onclick="Common.mobileSkipLink(this);" data-target-element="#navbar-toggle">
                          <button class="navbar-toggle collapsed" type="button" data-toggle="collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                          </button>
                        </div>
                        <nav id="navbar-toggle" class="bs-navbar-collapse skip-content">
                          <ul class="nav-accordion nav-mobile-accordion">

                            <li class="level0 home level-top">
                              <a href="{{ path('homepage') }}"
                                 class="level-top"><span>Accueil</span></a>
                            </li>
                            {{ render(controller('AppBundle:Default:mobilecategories')) }}
                          </ul>
                        </nav>
                      </div>
                    </div>
                    <!-- navigation EOF -->                            </div>
                </div>
                <div class="header-logo">
                  <a href="{{ path('homepage') }}" title="{{ siteName }}" class="logo">
                    <img class="x1" src="{{ asset('bundles/app/images/unik.png') }}" alt="{{ siteName }}" />
                  </a>
                </div>
                <div class="header-top-right">
                  <div class="top-right-inner">
                    <div class="header-type">
                      <div class="header-maincart">
                        <div class="cart-container">
                          <a href="{{ path('cart') }}" title="Mon Panier" class="icon-cart-header skip-link">
                            <span class="total"><strong class="fa fa-shopping-bag" aria-hidden="true"></strong><span class="hidden-mobile">Mon Panier</span> <span class="numb">{{ app.session.get('cart')|length }}</span></span>
                          </a>
                        </div>
                      </div>
                    </div>
                    <div class="header-setting">
                      <div class="setting-switcher switcher-wrap">
                        <div class="overwrite-setting skip-link" onclick="Common.mobileSkipLink(this);" data-target-element="#navbar-setting">
                          <span class="fa fa-cog"></span>
                        </div>
                        <div id="navbar-setting" class="switcher-content skip-content">
                          <div class="main-switcher">
                            <div class="main-setting">
                              <div class="main-account">
                                <ul class="links">
                                  {% if app.user %}
                                    <li class="first"><a href="{{ path("user_account_products") }}">Mes produits</a></li>
                                    <li><a href="{{ path('user_account_wallet') }}">Mon argent</a></li>
                                    <li><a href="{{ path('fos_user_profile_edit') }}">Mes paramètres</a></li>
                                    <li><a href="{{ path('user_account_purchases') }}">Mes achats</a></li>
                                    <li><a href="{{ path('user_account_sales') }}">Mes ventes</a></li>
                                    <li><a href="{{ path('user_notification_list') }}">Mes notifications</a></li>
                                    <li><a href="{{ path('fos_message_inbox') }}">Mes messages</a></li>
                                    <li><a href="{{ path('user_addresses') }}">Mes adresses</a></li>
                                    <li><a href="{{ path('user_account_wishlist') }}" title="Ma Wishlist" class="link-wishlist">Ma wishlist</a></li>
                                    <li class=" last" ><a class="log-in" href="{{ path('fos_user_security_logout') }}" title="Déconnexion">Déconnexion</a></li>
                                  {% else %}
                                    <li class="first" ><a href="{{ path('fos_user_security_login') }}" title="Connexion" >Connexion</a></li>
                                    <li class="last" ><a href="{{ path('fos_user_registration_register') }}" title="Connexion" >Inscription</a></li>
                                  {% endif %}
                                </ul>
                              </div>
                            </div>
                            <div class="language-currency hidden">
                              <div class="language-switcher">
                                <div class="title-selector"><span>Langues</span></div>
                                <ul class="select-language clearfix">
                                  <li class="current-language">
                                    <span>
                                      <img alt="francais" src="{{ asset('bundles/app/images/flags/flag-french.jpg') }}" />
                                    </span>
                                  </li>
                                  <li><a href="#"> <img alt="anglais" src="{{ asset('bundles/app/images/flags/flag-english.jpg') }}" /></a></li>
                                </ul>
                              </div>
                            </div>

                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="container">
            <div class="header-content hidden-xs">
              <div class="row">
                <div class="item col-lg-2 col-md-2 col-sm-3 col-xs-12">
                  <a href="{{ path('homepage') }}" title="{{ siteName }}" class="logo">
                    <img class="x1" src="{{ asset('bundles/app/images/unik.png') }}" alt="{{ siteName }}" />
                  </a>
                </div>
                <div class="item col-lg-10 col-md-10 col-sm-9 col-xs-12">
                  <div class="header-right-wrapper">
                    <div class="header-top-container">
                      <div class="language-wrapper"><div class="language-currency">
                          <div class="language-switcher switcher-wrap">
{#
                            <div class="overwrite-language">
                              <span style="background-image:url('{{ asset('bundles/app/images/flags/flag-french.jpg') }}');background-repeat: no-repeat; background-position: 15px center;">Français</span>
                            </div>
                            <ul class="select-language">
                              <li><a style="background-image:url({{ asset('bundles/app/images/flags/flag-french.jpg') }}); background-repeat: no-repeat; background-position: 0px center;" href="#"> Français</a></li>
                              <li><a style="background-image:url({{ asset('bundles/app/images/flags/flag-english.jpg') }}); background-repeat: no-repeat; background-position: 0px center;" href="#"> English</a></li>
                            </ul>
#}
                          </div>
                        </div>
                      </div>
                      <div class="store-wrapper"></div>
                      <div class="header-setting">
                        <div class="dropdown setting-switcher switcher-wrap">
                          {% if app.user %}
                          <a href="#" class="overwrite-setting dropdown-toggle" data-toggle="dropdown">
                            <span>Mon Compte</span>
                          </a>
                          <ul class="dropdown-menu dropdown-user">
                            <li class="first"><a href="{{ path("user_account_products") }}">Mes produits</a></li>
                            <li><a href="{{ path('user_account_wallet') }}">Mon argent</a></li>
                            <li><a href="{{ path('fos_user_profile_edit') }}">Mes paramètres</a></li>
                            <li><a href="{{ path('user_account_purchases') }}">Mes achats</a></li>
                            <li><a href="{{ path('user_account_sales') }}">Mes ventes</a></li>
                            <li><a href="{{ path('user_addresses') }}">Mes adresses</a></li>
                            <li><a href="{{ path('user_account_wishlist') }}" title="Ma Wishlist" class="link-wishlist">Ma wishlist</a></li>
                            <li class="hidden-lg"><a href="{{ path('user_notification_list') }}">Mes notifications</a></li>
                            <li class="hidden-lg"><a href="{{ path('fos_message_inbox') }}">Mes messages</a></li>
                            <li class="last" ><a class="log-in" href="{{ path('fos_user_security_logout') }}" title="Déconnexion">Déconnexion</a></li>
                          </ul>
                          {% else %}
                            <a href="{{ path('fos_user_security_login') }}">
                              <i class="fa fa-user" aria-hidden="true"></i>
                              <span>Connexion / Inscription</span>
                            </a>
                          {% endif %}
                        </div>
                      </div>
                    </div>
                    <div class="header-bottom-container">
                      <div class="row">
                        <div class="header-search">
                          <div class="search-container">
                            <div class="main-form-search">
                              <form id="search_mini_form" action="{{ path('search') }}" method="get">
                                <div class="input-group form-search">
                                  <div class="input-group-btn category-filter">
                                    <button type="button" class="btn dropdown-toggle" data-toggle="dropdown">
                                      <span class="category-label">Tout </span>&nbsp;
                                      <i class="fa fa-angle-down"></i>
                                    </button>
                                    {{ render(controller('AppBundle:Default:searchcategories')) }}
                                  </div>
                                  <input type="hidden" name="cat" class="search-category" value="{{ app.request.query.get('cat') }}" />
                                  <input id="search"
                                         type="search"
                                         name="q"
                                         value="{{ app.request.query.get('q') }}"
                                         class="input-text required-entry"
                                         maxlength="128"
                                         placeholder="Rechercher sur le site..." />
                                  <button type="submit" title="Search" class="button">
                                    <span><span><i class="fa fa-search"></i></span></span>
                                  </button>
                                </div>
                                <div id="search_autocomplete" class="search-autocomplete" style="display: none"></div>
                              </form>





                            </div>
                          </div>
                        </div>

                        <div class="header-account-action hidden-md hidden-xs hidden-sm" id="notificationLi">
                          <div class="account-container">
                            {{ render(controller('UserBundle:Notification:notificationBar')) }}
                          </div>
                        </div>


                        <div class="header-account-action hidden-md hidden-xs hidden-sm">
                          <div class="account-container">
                            <a href="{{ path('fos_message_inbox') }}" title="Ma messagerie" class="icon-header skip-link">
                              <span class="total"><strong class="fa fa fa-envelope" aria-hidden="true"></strong>{% if app.user and fos_message_nb_unread() > 0 %}<span class="count-numb">{{ fos_message_nb_unread() }}</span>{% endif %}</span>
                            </a>
                          </div>
                        </div>


                        <div class="header-maincart">
                          <div class="cart-container">
                            <a href="{{ path('cart') }}" title="Mon Panier" class="icon-cart-header skip-link">
                              <span class="total"><strong class="fa fa-shopping-bag" aria-hidden="true"></strong><span class="hidden-mobile">Mon Panier</span> <span class="numb main-numb">{{ app.session.get('cart')|length }}</span></span>
                            </a>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div id="top-nav-wrapper" class="top-nav-wrapper hidden-xs">
            <div class="container">
              <div class="navigation-wrapper hidden-xs">
                <div class="main-navigation">
                  <ul class="top-navigation">
                    <li class="level0 home level-top">
                      <a href="{{ path('homepage') }}"
                         class="level-top"><span>Accueil</span></a>
                    </li>
                    {{ render(controller('AppBundle:Default:categories')) }}
                    <li class="level0 nav-end level-top">
                      <a href="{{ path('sell_category') }}" class="level-top">Vendez</a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div><!-- #top-nav-wrapper -->
        </div>
      </div>
    </header>


