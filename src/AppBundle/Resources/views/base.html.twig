<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>{% block title %}Noname{% endblock %}</title>

    <!-- Bootstrap -->
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/master.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <nav class="main-navbar navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="./"><img src="{{ asset('bundles/app/images/logo.png') }}" alt="logo" /></a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <form class="navbar-form navbar-left" method="get" action="{{ path('search') }}">
            <input type="text" class="form-control" name="q" placeholder="Rechercher..." value="{{ app.request.query.get('q') }}">
          </form>
          {{ render(controller('AppBundle:Default:categories')) }}

          <ul class="nav navbar-nav navbar-right">
            <li><a href="#">Déposer une annonce</a></li>
            {% if app.user %}
              <li {% if app.request.get('_route') == 'fos_user_profile_show' %}class="active"{% endif %}><a href="{{ path('fos_user_profile_show') }}"><i class="fa fa-user"></i> Mon compte</a></li>
            {% else %}
              <li><a href="{{ path('fos_user_security_login') }}">S'identifier</a></li>
              <li><a href="{{ path('fos_user_registration_register') }}">S'inscrire</a></li>
            {% endif %}
            <li><a href="#"><i class="fa fa-shopping-cart"></i> Panier</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container">
      {% block body %}{% endblock %}
    </div>

    <footer class="footer">
      <div class="container">
        <div class="row">
          <div class="col-sm-4">
            <div class="footer-title">Découvrir</div>
            <ul class="footer-menu">
              <li><a href="#">Catégorie 1</a></li>
              <li><a href="#">Catégorie 2</a></li>
              <li><a href="#">Catégorie 3</a></li>
            </ul>
            <div class="footer-title">En savoir plus</div>
            <ul class="footer-menu">
              <li><a href="#">Catégorie 1</a></li>
              <li><a href="#">Catégorie 2</a></li>
              <li><a href="#">Catégorie 3</a></li>
            </ul>
          </div>
          <div class="col-sm-4">
            <div class="footer-title">Ne rien louper</div>
            <ul class="footer-menu">
              <li><a href="#">&Eacute;vènements</a></li>
              <li><a href="#">Blog</a></li>
              <li><a href="#">Presse</a></li>
              <li><a href="#">Bien vendre</a></li>
              <li><a href="#">Comment acheter</a></li>
              <li><a href="#">On parle de nous</a></li>
              <li><a href="#">Récompenses</a></li>
            </ul>
          </div>
          <div class="col-sm-4">
            <div class="footer-title">Liens pratiques</div>
            <ul class="footer-menu">
              <li><a href="{{ path('fos_user_security_login') }}">S'identifier</a></li>
              <li><a href="{{ path('fos_user_registration_register') }}">S'inscrire</a></li>
              <li><a href="{{ path('about') }}">Mentions Légales</a></li>
              <li><a href="#">FAQ</a></li>
            </ul>
          </div>
        </div>
      </div>
    </footer>

    {% block javascripts %}
      <script src="{{ asset('js/master.js') }}"></script>
    {% endblock %}

    {% block javascript_include %}{{ jsinit() }}{% endblock javascript_include %}

    {% if app.environment == 'dev' %}
       <script>document.write('<script src="http://' + (location.host || 'localhost').split(':')[0] + ':35729/livereload.js?snipver=1"></' + 'script>')</script>
    {% endif %}
  </body>
</html>
